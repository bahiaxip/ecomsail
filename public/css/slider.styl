	ul.navigation
		display block
		margin 0px
		padding 0px
		position absolute
		overflow hidden
		top calc(50% - 18px)
		z-index 9
		width 100%
		list-style none
		li
			display inline-flex
			float left
			a
				color #FFF
				background-color rgba(0,0,0,.75)
				border-radius 50%
				height 36px
				width 36px
				text-decoration none
				font-size 1.4em
				display flex
				align-items center
				justify-content center
			/* en lugar de align-items y justify-content se puede centrar con i> margin auto
				/*
				i
					margin auto
				*/
			&:first-child
				margin-left 32px
				a
					i
						position relative
						margin-left -2px
						margin-top 2px
			&:last-child
				float right
				margin-right 32px
				a
					i
						position relative
						margin-left 2px
						margin-top 2px
@media only screen and (max-width 1200px)
	.mdslider
		min-height slider_height
		.md-slider-item
			min-height slider_height
			.content 
				.cinside
					h2
						font-size 28px
					p
						font-size 18px
			
			/*margin-top 100px*/
			.box_slider
				.slider.slider_auto
					img
						display flex
						margin auto
				.full_slider
					max-height slider_height

@media only screen and (max-width 991px)
	.mdslider
		.md-slider-item
			.row.double_panel
				height 100%
				max-height 500px
				.dp_img
					height 100%
					
					.img
						height 100%
						img
							height 100%
					
				
			margin 0
			.slider_left
				display none
			.img
				.text
					
					display block
			.box_slider
				.slider
					.div_text
						.text
							width auto
			/*slider auto */		
			.box_slider
				.slider.slider_auto
					width 70%
					position relative
			/* full slider */
			.box_slider.full_slider
				.slider
					.div_text
						.text
							width 100%
			/* double panel */
			.row.double_panel
				
				.div_text .text
					width 100%
