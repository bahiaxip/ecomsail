:root
	--backgroundslider #f6f6f6
	--color rgba(0,0,0,.7)
	--minheight 400px


full_slider = null
/* para full_slider custom_slider = true y slider_auto: eliminar position:absolute y width a 100%*/
custom_slider = true
/*full_slider = true*/
$midisplay = null
if($autoslider)
	$midisplay = flex
else
	$midisplay = none
if(full_slider)
	auto_slider = false
w_sliderauto = 50%
if(full_slider)
	w_sliderauto = 100%
if(!full_slider && !auto_slider)
	custom_slider = false

backslider = var(--backgroundslider)
micolor = var(--color)
slider_height = var(--minheight)
/*if(!custom_slider)
	slider_height = 400px*/
.mdslider
	display flex
	flex-wrap wrap
	margin-top 24px
	min-height slider_height
	max-height 550px
	overflow hidden
	position relative
	width 100%
	.md-slider-item
		align-items center
		border-right 1px solid #FFF
		display none
		background-color #FFF
		color #FFF
		font-size 4em
		justify-content center
		height 100%
		width 100% !important
		min-height slider_height
		transition .5s all ease-in-out
		position absolute
		.col-md-7
		.col-md-5
			padding 0px
		.row
			margin 0px
			padding 0px
		.content
			background-color #f6f6f6
			align-items center
			color #333
			display flex
			height 100%
			justify-content center
			h2
			p
				display block
				text-align left
				width 100%
			.cinside				
				text-align left
				border-left 2px solid color2
				padding-left 20px
				max-width 80%
				h2
					font-size 0.6em
				p
					font-size .4em
				.btn
					background-color color2
					color #333
					display inline-flex
					margin 0px auto							
			
		/*
		&:nth-child(1)
			left 0px
		&:nth-child(2)
			left 100%
		&:nth-child(3)
			left 200%
		&:nth-child(4)
			left 300%
			*/
		.div_img
			max-height 500px
			height 100%
			
			width 100%
		.img
			height 100%
			position relative
			width 100%
			.text
				background-color rgba(0,0,0,.7)
				color #FFF
				display none
				min-height 100px
				position absolute
				bottom 0
				width 100%
				h2
					font-size 30px
					margin 10px
				p
					font-size 20px
					margin 10px
		/* full_slider (pantalla completa) y slider_auto (márgenes automáticos)*/
		.box_slider.full_slider
			width 100%
		.box_slider.auto
			width 50%
		.box_slider
			background backslider
			height auto
			margin 0
			padding 0
			/* para double_panel slider_auto */
			.slider.slider_auto
				position relative
				width 50%
				.div_text
					display flex
					justify-content center
			.slider
				margin auto
				max-height slider_height				
				width 100%
				.div_text
					display flex
					justify-content center
					width 100%
					.text
						background-color micolor
						border-top-left-radius 6px
						border-top-right-radius 6px
						color #FFF
						display block
						min-height 100px
						margin auto
						position absolute
						bottom 0
						width 70%
						h2
							font-size 30px
							margin 10px
						p
							font-size 20px
							margin 10px
