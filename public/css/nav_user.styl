/* menu categorias hijas o subcategorías*/
.dropdown-submenu	
	ul.dropdown-menu
		li.dropdown-item
			padding 0
			a
				display block
				padding .3em				
				span
					margin-left 8px
				&:hover
					a	
						color color2
				&:focus
					background-color color2
					color #FFF
				
.dropdown-submenu	
	.dropdown-menu		
		left 100%
		margin-top -34px
.dropdown-submenu
	&:hover		
		color color2
		.dropdown-menu
			display block
.dropdown-submenu
	a:after
		display block
		content ''
		float right
/* dropdown de usuario */
.dropdown-menu 
	li.dropdown_menu_user
		a
			&:hover
				color color2		
			&:focus
				background-color color2
				color #FFF
