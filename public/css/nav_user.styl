.lat
	width 10%
	/* genérico */
	li
		list-style none
		a
			color #696969
			&:hover
				color color2
			&:focus
				color color2
		a.active
			/*background-color rgba(0,178,146,.3)*/
			background-color color2
			color #FFF
			
	/* menu categorias padres */
	li.dropdown-submenu.dropdown_menu1
		padding 0		
		a
			display block
			padding .3em			
			span
				margin-left 10px
			&:focus
				background-color color2
				box-shadow none
				color #FFF
/* la clase categories permite mostrar el fondo del menú de
categorías, mientras que donde no está este menú es preferible
mantener el 10%*/
.lat.categories
	width auto
	

.lat_left
	li
		float left
		a
			
		
.lat_right
	justify-content flex-end
	display flex
	li	
		display flex		
	ul
		li
			cursor pointer
.box_nav_user
	background-color rgba(240,240,240,.9)
	display flex
.nav_user	
	display flex
	font-family QuicksandB
	
	justify-content center
	width 80%
	ul
		display flex
		padding 0
		
		li
			display flex			
			list-style none
			position relative
			.layer_nav
				background-color rgba(0,178,146,.1)
				bottom 0
				height 0
				position absolute
				width 100%
				transition all 0.5s linear
			&:hover .layer_nav			
				height 100%
				
			a,button
				color #696969				
				font-weight bold
				text-decoration none
				transition all 1s linear
				position relative
				z-index 1
				&:hover					
					color color6
				&:focus
					color color6
				span
					position relative
					z-index 1
			a.active
				z-index 1
				border-bottom color2 2px solid
				color color6
				.layer_nav
					height 100%
			/*
			a.cart
				display flex		
				span
					display flex
					align-items center
					i
						margin-right 2px
			*/
.menu_hidden	
	display none
	#dropdown_hidden
		color color6
		&:hover
