color1 = #4861ff
color2 = #00b292
color3 = #ff003d
color4 = #489bf8
color6 = #494949
color7 = #E3E3E3
color8 = #696969


custom_slider = false
:root
	--backgroundslider #f6f6f6
	--color rgba(0,0,0,.7)
	--minheight 500px
backslider = var(--backgroundslider)
micolor = var(--color)
slider_height = var(--minheight)
/*if(!custom_slider)
	slider_height = 400px*/
.mdslider
	display flex
	flex-wrap wrap
	margin-top 24px
	min-height slider_height
	max-height 550px
	overflow hidden
	position relative
	width 100%
	.md-slider-item
		align-items center
		border-right 1px solid #FFF
		display none
		background-color #FFF
		color #FFF
		font-size 4em
		justify-content center
		height 100%
		width 100% !important
		min-height slider_height
		transition .5s all ease-in-out
		position absolute
		.col-md-7
		.col-md-5
			padding 0px
		.row
			margin 0px
			padding 0px
		.content
			background-color #f6f6f6
			align-items center
			color #333
			display flex
			height 100%
			justify-content center
			h2
			p
				display block
				text-align left
				width 100%
			.cinside				
				text-align left
				border-left 2px solid color2
				padding-left 20px
				max-width 80%
				h2
					font-size 0.6em
				p
					font-size .4em
				.btn
					background-color color2
					color #333
					display inline-flex
					margin 0px auto							
			
		/*
		&:nth-child(1)
			left 0px
		&:nth-child(2)
			left 100%
		&:nth-child(3)
			left 200%
		&:nth-child(4)
			left 300%
			*/
		.div_img
			max-height 500px
			height 100%
			
			width 100%
		.img
			height 100%
			
			position relative
			
			width 100%
				
					
			.text
				background-color rgba(0,0,0,.7)
				color #FFF
				display none
				height 100px
				position absolute
				bottom 0
				width 100%
				h2
					font-size 30px
					margin 10px
				p
					font-size 20px
					margin 10px
		.full_slider
			background backslider
			height auto
			margin 0
			padding 0
			width 100%
			
			.slider_auto
				margin auto
				
				max-height slider_height
				position relative
				width 50%
				img
					margin auto
				.div_text
					display flex
					justify-content center
					.slider_text
						background-color micolor
						color #FFF
						
						height 100px
						position absolute
						bottom 0
						width 100%
						h2
							font-size 30px
							margin 10px
						p
							font-size 20px
							margin 10px
	ul.navigation
		display block
		margin 0px
		padding 0px
		position absolute
		overflow hidden
		top calc(50% - 18px)
		z-index 9
		width 100%
		list-style none
		li
			display inline-flex
			float left
			a
				color #FFF
				background-color rgba(0,0,0,.75)
				border-radius 50%
				height 36px
				width 36px
				text-decoration none
				font-size 1.4em
				display flex
				align-items center
				justify-content center
			/* en lugar de align-items y justify-content se puede centrar con i> margin auto
				/*
				i
					margin auto
				*/
			&:first-child
				margin-left 32px
				a
					i
						position relative
						margin-left -2px
						margin-top 2px
			&:last-child
				float right
				margin-right 32px
				a
					i
						position relative
						margin-left 2px
						margin-top 2px
@media only screen and (max-width 1200px)
	.mdslider
		min-height 400px
		.md-slider-item
			min-height 400px
			.content 
				.cinside
					h2
						font-size 28px
					p
						font-size 18px
			
			/*margin-top 100px*/
			if(!custom_slider)
				img
					display flex
					margin auto
					max-height slider_height
if(!custom_slider)
	@media only screen and (max-width 992px)
		.mdslider
			.md-slider-item
				margin 0
				.slider_left
					display none
				.img
					.text
						bottom 10%
						display block
						
				.full_slider .slider_auto
					width 80%
					position relative
					.div_text .slider_text
						width auto
	@media only screen and (max-width 850px)
		.mdslider .md-slider-item
			.img .text
				bottom 0
			.full_slider .slider_auto
				width 100%
				position inherit
				.div_text .slider_text
					width 100%
@media only screen and (max-width 700px)
	if(!custom_slider)
		.mdslider
			margin-top 0px
			min-height 300px
			.md-slider-item
				min-height 300px
				.full_slider .slider_auto
					position inherit
	else
		.mdslider .md-slider-item
			height auto
			.full_slider .slider_auto .slider_text
				height 85px
				h2
					font-size 24px
				p
					font-size 16px
@media only screen and (max-width 500px)
	
	.div_products_list
		margin-top 0px
	

				
				