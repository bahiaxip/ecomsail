.lat, .lat
	width 10%
	li
		list-style none
		a
			color #696969
.lat_left
	li
		float left
		
.lat_right
	justify-content flex-end
	display flex
	li	
		display flex		
		

.nav_user
	display flex
	justify-content center
	width 80%
	ul
		display flex
		padding 0
		
		li
			display flex
			list-style none
			a
				color #696969				
				font-weight bold
				text-decoration none
				
			a.cart
				display flex		
				span
					display flex
					align-items center
					i
						margin-right 2px
.menu_hidden
	display none
						
@media only screen and (max-width 992px)
	.nav_user
		
		ul
			display none
	.lat_right
			
	
	.menu_hidden
		display flex
		align-items center