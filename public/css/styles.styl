.div_products_list
	display block
	text-align center
	width 100%
	
	.products
		display inline-flex
		flex-flow row wrap
		margin auto
		position relative
		text-align left
		width 18%
			
		.image
			align-items center
			display flex
			justify-content center
			position relative
			overflow hidden
			width 100%
			.layer
				background-color rgba(0,0,0,.1)
				border-radius 6px
				cursor pointer			
				display none			
				height 100%
				position absolute
				width 100%
				z-index 4
				
				.favorite
					display flex
					height 30%
					margin-left 5px
					width 100%
					position relative
					.icon					
						align-items center
						background-color color1
						border-radius 50%
						color color1
						display flex
						font-size 1.2em
						height 15px
						justify-content center
						margin-top 5px
						padding 15px
						width 15px
						i
							font-size .8em
							color #FFF
				.plus				
					align-items flex-end
					display flex
					height 70%
					justify-content center
					position relative
					width 100%
					.plus_btn					
						button
							color #FFF
							margin-bottom 5px
						
			img
				padding 12px
				max-height 200px
				transform scale(1)
				transition .3s all ease-in-out
		
		&:hover
			.layer
				display block
			.image
				img
					transform scale(1.10)
		.title
			display flex
			margin 10px auto
		.price
			margin auto

.modal_item
	padding-top 15px
.modal_item .modal-content,.product_item	
	.title_item
		h5
			font-family QuicksandB
			font-size 1.7em
	
	.carousel_item
		/*display inline-flex*/
		justify-content center
		margin auto
		overflow hidden
		padding 10px		
		img
			margin 100px auto
			padding 10px
			height auto
		
	.quantity_item,.div_product
		
		.price
			
			span				
				font-size 1.5em
			p
				font-size 0.7em
		
		.combinations			
			display block
			margin-bottom 20px
			.combinations_name
				border-bottom color7 1px solid
				margin-bottom 8px
				width 100%			
			.combinations_items
				
				display flex
				flex-flow row wrap
				.item
					position relative
					.mylabel
						height 100%
						position absolute
						opacity 0
						cursor pointer
						width 100%
						z-index 999
						
					input + label
						border-radius 5px
						color color6
						margin 5px
						outline color7 1px solid
						padding 2px 8px
						
					input[type=radio]:checked + label
						background-color color1
						color #FFF
					
					
		.quantity
			display flex
			.amount_action
				align-items center
				background-color #696969
				border-radius 50%
				color color7
				display flex
				float left
				font-size .8em
				margin-top 4px
				height 32px
				justify-content center
				text-decoration none
				width 32px
				&:first-child
					margin-right 8px
				&:last-child
					margin-left 8px
				&:active
					box-shadow 0 0 6px color6
					color #FFF		
			.form-control
				float left
				width calc(100% - 80px)
		.quantity_btn
			align-items center
			display flex
			justify-content center
			
			button
				background-color color1
				border-radius 5px
				color color7
				margin auto 10px
				cursor pointer
				&:active
					box-shadow 0 0 6px color1
					color #FFF
					
			button:disabled
				cursor not-allowed
				pointer-events all 
					
			.icon
				align-items center
				background-color color1
				border-radius 50%
				cursor pointer
				display flex
				font-size 1.2em
				justify-content center
				height 30px
				vertical-align middle
				width 30px				
				i					
					color color7
					font-size .8em
			
				&:active
					box-shadow 0 0 6px color1
					color #FFF
			.icon.disabled
				cursor not-allowed
				opacity 0.7
				
