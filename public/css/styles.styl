/* clases para los botones del slider slick (por defecto se encuentra transparent)
como existen 2 uno es el carousel de product y otro el modal de product
*/
/* comunes para los 2 carouseles*/
.product_slick,.productmodal_slick
	.slick-arrow
		align-items center
		
		border-radius 50%
		display flex	
		justify-content center
		
		z-index 90
		&:before
			position relative
			top 1px	
		&:hover
		&:active
		&:focus
			background-color rgba(0,0,0,.75)
/*modificamos ancho y alto de botones según si es el carousel de product o product modal*/
.product_slick
	.slick-next
		right 8px
	.slick-prev
		left 8px
	.slick-arrow
		background-color rgba(0,0,0,.6)	
		height 36px
		width 36px

.productmodal_slick
	.slick-next
		right 8px
		/* modifica el color del guión
		&:hover
			background-color orange
		*/
	.slick-prev
		left 8px
	
	.slick-arrow
		background-color rgba(0,0,0,.6)	
		height 16px
		width 16px
		/* modifica el color del guión
		&:hover		
			background-color orange
		*/
	.slick-arrow:before
		/* color con before modifica el fondo del guión*/
		color color7
		font-size 30px
		opacity 1
	
	
	
