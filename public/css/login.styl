//mediante el div de bootstrap (.alert-danger) y la clase hide generamos un 
//slideUp() y slideDown() similar al de jquery pero con JavaScript puro desde register.blade.php 

.alert-danger
.alert-success
	padding 1rem 1rem
	max-height 1000px
	font-size 1em
	overflow-y hidden
	/*border 1px solid*/
	transition max-height .3s linear,padding .5s ease-out	
	
.hide	
	max-height 0px	
	padding-top 0px
	padding-bottom 0px
	border 0px

