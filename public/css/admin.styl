					background-color #E9E9E9
					border 1px solid #D3D3D3
					border-radius 4px
					margin auto 5px
					text-align center
			
					.admin_items
						display flex
						margin auto
						a
							align-items center
							display flex
							font-size .9em
							height 38px
							margin auto
							width 38px
							i
								margin auto
	.sectionE
		width 8%
		display flex
		.menu_options
			width 100%
			background-color #f9f9f9
			ul
				list-style none
				padding 0				
			button
				background-color #7952b3
				color #FFF
				font-weight bold
				width 100%
				i					
					float right
					margin-top 5px
					
				&:hover					
					color lightblue
					outline 0
