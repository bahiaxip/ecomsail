body
	/*
	font-family: 'Open Sans', sans-serif;
	*/
	font-family QuicksandR;
	font-size .9em 		

	
.mtop16
	margin-top 15px

/* estilos mensajes de error */
.alert-danger
.alert-success
	padding 1rem 1rem
	max-height 1000px
	font-size 1em
	overflow-y hidden
	/*border 1px solid*/
	transition max-height .3s linear,padding .5s ease-out
	
.hide	
	max-height 0px	
	padding-top 0px
	padding-bottom 0px
	border 0px
/* fin estilos mensajes de error */
.content
	background-color #D3D3D3
	display flex
	min-height 100vh
	width 100%
	.paths		
		margin auto 10px
		ul
			display inline-flex
			padding 0
			list-style: none
			a
				color #696969
				text-decoration none
				font-size .8em
				
				
	.sectionL
		background-color #FFF
		border-top darkorange 1px solid
		display flex
		width 12%
		.sidebar
			background-color color2
			width 100%
			.logo
				display flex
				padding-top 10px
				img
					width 64px
					margin auto
			.options
				ul
					margin 0px 
					padding 0px
					li
						display flex
						list-style none
						a							
							color #D3D3D3
							font-family QuicksandB
							padding 15px 0px 15px 15px
							text-decoration none
							width 100%					
							&:hover
								color lightblue
						&:hover
							background-color #454545
							cursor pointer
								
	.sectionR
		width 86%
		margin 0px 10px		
		.inner
			.filters
				display flex
				
				align-items center
				ul.addL
					display flex
					justify-content flex-start									
				ul.add					
					display flex
					justify-content flex-end
					
					/*
					background-color #f9f9f9
					border-bottom #696969 1px solid
					border-radius 4px				
					*/
					padding 4px 4px
					width 100%
					
					li					
						font-family QuicksandB
						
						list-style none
						margin auto 2px
						position relative
						button
							color #F3F3F3
							font-size .9em
							margin auto 2px
							&:hover
								color #FFF
						ul
							li
								font-size .9em
					/*	
						&:hover
							ul							
								display block
									
						ul
							display none
