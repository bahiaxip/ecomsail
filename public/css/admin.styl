/*modal confirm combinations*/
.confirmComb
	align-items center
	background-color rgba(0,0,0,.4)
	display flex
	font-size 0
	height 0
	left 0
	opacity 0
	overflow hidden
	position absolute
	transition opacity .3s linear
	width 0
	z-index 1
.confirmComb.showconfirm
	height 100%
	opacity 1
	width 100%
	
.active
	display block !important
.active_inflex
	display inline-flex
.subcat
	display none

/* galería */
.back_upload
	width 100%
	height 200px
	display flex
	vertical-align middle
	overflow auto
.back_upload .box
	/*restamos el padding del mat-expansion de angular material y sumamos 
	1 para que no se solape el outline*/

	width calc(100% - 47px)
	position absolute
	height 200px
	outline #676767 1px solid
	/*display:flex;*/
	/*margin:auto;*/
.back_upload .info_upload
	position absolute
	display flex
	vertical-align middle
	justify-content center
	align-items center
	width calc(100% - 48px)
	min-height 200px
.back_upload .text
	font-size 10px
	margin auto
	position absolute
	top 10px

.info_upload .btn
	margin auto
	background-color rgba(0,0,0,.8)
	color white
.back_upload .back_images
	display flex
	user-select none

.back_images .box_images
	display flex
	width 150px
	position relative
	overflow hidden
	align-items center
	margin 5px
.back_images .div_images
	width 100%
	height 100%
	overflow hidden
	object-fit cover
	display flex
	justify-content center

.back_images .images
	width auto
	height auto
	overflow hidden

.back_images .delete_images
	position absolute
	right 0
	background-color white


